# VPS Connection Settings
VPS_HOST=your-vps-ip-or-domain.com
VPS_USER=your-username

# Authentication (use either password OR key-based auth)
VPS_PASSWORD=your-password
# OR use key-based authentication
VPS_KEY_PATH=/path/to/your/private/key
VPS_KEY_PASSPHRASE=your-key-passphrase-if-any

# SQLite Database Settings
# Path to your local SQLite database file
LOCAL_SQLITE_PATH=/path/to/your/local/database.db

# Directory on VPS where the database should be deployed
REMOTE_SQLITE_DIR=/home/admin/app/data

# Name of the database file on the remote server (optional, defaults to "database.db")
REMOTE_SQLITE_NAME=production.db
